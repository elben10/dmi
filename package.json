{
  "name": "dmi-frontend",
  "version": "1.0.0",
  "repository": "https://github.com/elben10/dmi.git",
  "author": "Jakob Jul Elben <elbenjakobjul@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/frontend"
  ],
  "devDependencies": {
    "@types/jest": "^29.4.2",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "scripts": {
    "test": "yarn test:lint && yarn test:format && yarn test:type && yarn test:unit",
    "test:ci": "yarn test:lint && yarn test:format && yarn test:type && jest",
    "test:e2e": "jest --group=e2e",
    "test:format": "prettier --check packages",
    "test:integration": "jest --group=integration",
    "test:lint": "eslint --ext .ts,.tsx packages",
    "test:type": "yarn workspace frontend tsc --noEmit",
    "test:unit": "jest --group=unit"
  },
  "jest": {
    "runner": "groups"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  }
}